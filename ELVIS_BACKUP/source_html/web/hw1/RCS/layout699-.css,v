@/* layout699-.css - layout for smaller devices
 *
 * Kevin Dittmar
 */
@@media screen and (max-width: 699px) {
	div#me{
		text-align: center;
	}
	
	h1 {
		text-align:	center;
		width:	100%;
	}

	div#homework_listing h2{
		text-align:	 left;
	}
	div#homework_listing ul{
		margin-left:	30px;
	}
	
	/*This will make sure that the icons scale
	 *with the webpage to keep the webline from
	 *being too wide.
	 */
	img.icon{
		max-height:	32px;
		max-width:	32px;
		min-height:	16px;
		min-width:	16px;
		height:	100%;
		width:	100%;
	}
	
	img#css_icon{
		/*88 x 31 are the dimensions in pixels
		 *of the CSS validation icon from W3C.
		 */
		max-width:	88px;
		max-height:	31px;
		min-width:	44px;
		min-height:	16px;
		width:		100%;
		height:		100%;
	}
}@


